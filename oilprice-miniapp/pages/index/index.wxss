/**index.wxss**/
.index {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
}
.index .top {
  height: 150px;
  background-color: #7BC240;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 16px;
  letter-spacing: 1px;
}

.index .location {
  display: flex;
  align-items: center;
  padding: 16px;
  color: #32B340;
  box-shadow: 2px 2px 2px #F5F5F5;
}
